.background {
  position: relative;
  background: #FA7298;
  width: 100%;
  height: 350rpx;
  border-radius: 0 0 30% 30%;
}

.user {
  width: 80%;
  height: 120rpx;
  display: flex;
  position: absolute;
  left: 80rpx;
  top: 60rpx;
  align-items: center;
}

.userhead-container {
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FF8EAE;
}

.login-area {
  display: flex;
  align-items: center;
}

.userhead {
  width: 120rpx;
  border-radius: 50%;
}

.username {
  color: white;
  font-size: 40rpx;
  margin-left: 20rpx;
}

.manage {
  margin-left: auto;
  font-size: 30rpx;
  color: white;
}

.vip-area {
  position: absolute;
  display: flex;
  justify-content: center;
  bottom: -5%;
  width: 80%;
  left: 10%;
  height: 30%;
  background: black;
  border-radius: 15rpx 15rpx 50% 50%;
}

.vip-detail {
  background: #FCD3AF;
  display: flex;
  align-items: center;
  height: 30%;
  justify-content: center;
  color: #8A6032;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  font-size: 0.8rem;
}

.setting {
  width: 85%;
  height: 100rpx;
  margin: 0 auto;
}

.setting-board {
  width: 100%;
  margin-top: 50rpx;
  border-radius: 15rpx;
  box-shadow: 0 5rpx 6rpx 0 rgba(0,0,0,0.22);
}